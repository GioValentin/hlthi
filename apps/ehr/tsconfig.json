{
  "extends": "tsconfig/react.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@features/*": ["./src/features/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@layout/*": ["./src/layout/*"],
      "@pages/*": ["./src/pages/*"],
      "@rcm/*": ["./src/rcm/*"],
      "@shared/*": ["./src/shared/*"],
      "@state/*": ["./src/state/*"],
      "@telemed/*": ["./src/telemed/*"],
      "@types/*": ["./src/types/*"],
      "@fonts/*": ["./src/fonts/*"],
      "@lib/*": ["./src/lib/*"],
      "@features/ChatBubble": ["custom-ui-components/lib/plugins/ChatBubbleProvider"],
      "@theme/*": ["src/themes/ottehr/*"],
      "@defaultTheme/*": ["src/themes/ottehr/*"],
      "@ehrTheme/*": ["src/themes/ottehr/*"],
      "@ehrDefaultTheme/*": ["src/themes/ottehr/*"]
    }
  },
  "include": [".", ".eslintrc.cjs"]
}
